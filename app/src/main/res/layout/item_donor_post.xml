<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:elevation="4dp">

    <!-- En-tÃªte -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile"
            android:background="@color/purple_200"
            android:padding="8dp"
            android:clipToOutline="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Utilisateur"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="12sp"
                android:textColor="#666" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:background="@color/purple_500"
            android:textColor="@android:color/white"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Contenu -->
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Contenu du post"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp" />

    <!-- Image -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/iv_post_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_image_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:background="#80000000"
            android:textColor="@android:color/white"
            android:padding="4dp"
            android:textSize="12sp"
            android:visibility="gone" />

    </RelativeLayout>

    <!-- Informations mÃ©dias -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_video_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¹ 0 vidÃ©o(s)"
            android:textSize="12sp"
            android:textColor="#666"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Stats avec "See all" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_likes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘ 0"
            android:textSize="12sp"
            android:textColor="#666" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_comments_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¬ 0"
                android:textSize="12sp"
                android:textColor="#666" />

            <TextView
                android:id="@+id/tv_see_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘ï¸ See all"
                android:textSize="11sp"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingVertical="2dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Boutons d'action -->
    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_like"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="ðŸ‘ Like"
            android:textSize="14sp"
            android:layout_marginEnd="4dp"
            android:background="#E0E0E0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_comment"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="ðŸ’¬ Comment"
            android:textSize="14sp"
            android:layout_marginHorizontal="4dp"
            android:background="#E0E0E0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_help"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="ðŸŽ Help"
            android:textSize="14sp"
            android:layout_marginEnd="4dp"
            android:background="@color/purple_500"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_share"
            android:padding="8dp" />

    </LinearLayout>

</LinearLayout>